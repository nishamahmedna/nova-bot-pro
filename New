üîÅ Updated Code with Image Display:
python
Copy
Edit
import pygame
import pyttsx3
import time

# Init pygame and TTS
pygame.init()
engine = pyttsx3.init()

# Set screen
width, height = 800, 480
screen = pygame.display.set_mode((width, height))
pygame.display.set_caption("NovaBot")

# Load image (your logo)
image_path = "images/novabot_logo.jpg"  # Make sure this exists
logo = pygame.image.load(image_path).convert()
logo = pygame.transform.scale(logo, (width, height))

# Load sound
robo_sound = "robo_intro.wav"
pygame.mixer.init()
pygame.mixer.music.load(robo_sound)

# Fade in image
def fade_in_image(image):
    for alpha in range(0, 255, 5):
        image.set_alpha(alpha)
        screen.fill((0, 0, 0))
        screen.blit(image, (0, 0))
        pygame.display.update()
        pygame.time.delay(30)

# Fade out image
def fade_out_image(image):
    for alpha in range(255, 0, -5):
        image.set_alpha(alpha)
        screen.fill((0, 0, 0))
        screen.blit(image, (0, 0))
        pygame.display.update()
        pygame.time.delay(30)

# Speak offline
def speak(text):
    engine.say(text)
    engine.runAndWait()

# Run intro
fade_in_image(logo)
pygame.mixer.music.play()
time.sleep(2)
speak("Welcome to NovaBot")
fade_out_image(logo)

pygame.quit()
